# ==============================================
# DoorKet Environment Configuration
# ==============================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# ==============================================
# GOOGLE MAPS CONFIGURATION
# ==============================================
# Get your API key from Google Cloud Console
# Enable Maps SDK for Android, Maps SDK for iOS, and Geocoding API
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# ==============================================
# SUPABASE CONFIGURATION
# ==============================================
# Get these from your Supabase project dashboard
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ==============================================
# FIREBASE CONFIGURATION (Optional - for push notifications)
# ==============================================
EXPO_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
EXPO_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# ==============================================
# PAYMENT CONFIGURATION (HUBTEL)
# ==============================================
# Get these from your Hubtel merchant account
HUBTEL_CLIENT_ID=your_hubtel_client_id
HUBTEL_CLIENT_SECRET=your_hubtel_client_secret
HUBTEL_BASE_URL=https://api-txnstatus.hubtel.com

# ==============================================
# APP CONFIGURATION
# ==============================================
# App environment (development, staging, production)
EXPO_PUBLIC_APP_ENV=development

# API Base URL (if you have a separate backend)
EXPO_PUBLIC_API_BASE_URL=http://localhost:3000/api

# ==============================================
# DEVELOPMENT & TESTING
# ==============================================
# Enable test mode for development (bypasses some real integrations)
EXPO_PUBLIC_ENABLE_TEST_MODE=true

# Test OTP code for development
EXPO_PUBLIC_TEST_OTP_CODE=123456

# Test phone number for development
EXPO_PUBLIC_TEST_PHONE_NUMBER=+233246562377

# ==============================================
# FEATURE FLAGS
# ==============================================
# Enable/disable features during development
EXPO_PUBLIC_ENABLE_BIOMETRIC_AUTH=true
EXPO_PUBLIC_ENABLE_GOOGLE_LOGIN=true
EXPO_PUBLIC_ENABLE_CARD_PAYMENTS=true
EXPO_PUBLIC_ENABLE_CASH_PAYMENTS=true
EXPO_PUBLIC_ENABLE_CUSTOM_ITEMS=true
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true

# ==============================================
# BUSINESS CONFIGURATION
# ==============================================
# Default fees and limits
EXPO_PUBLIC_DEFAULT_DELIVERY_FEE=5.00
EXPO_PUBLIC_DEFAULT_SERVICE_FEE_PERCENT=5
EXPO_PUBLIC_MIN_ORDER_AMOUNT=10.00
EXPO_PUBLIC_MAX_ORDER_AMOUNT=1000.00

# Delivery settings
EXPO_PUBLIC_MAX_DELIVERY_DISTANCE_KM=15
EXPO_PUBLIC_BASE_DELIVERY_TIME_MINUTES=30

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
# JWT secret for token generation (if using custom backend)
JWT_SECRET=your_jwt_secret_key_here

# Encryption key for sensitive data
EXPO_PUBLIC_ENCRYPTION_KEY=your_encryption_key_here

# ==============================================
# ANALYTICS & MONITORING (Optional)
# ==============================================
# Google Analytics
EXPO_PUBLIC_GA_TRACKING_ID=GA-XXXXXXXXX

# Sentry for error tracking
EXPO_PUBLIC_SENTRY_DSN=https://your-sentry-dsn-here

# ==============================================
# SOCIAL LOGIN (Optional)
# ==============================================
# Google OAuth
EXPO_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id
EXPO_PUBLIC_GOOGLE_CLIENT_SECRET=your_google_client_secret

# Facebook OAuth
EXPO_PUBLIC_FACEBOOK_APP_ID=your_facebook_app_id

# ==============================================
# EMAIL CONFIGURATION (Optional)
# ==============================================
# If using custom email service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=noreply@doorket.com
FROM_NAME="DoorKet"

# ==============================================
# SMS CONFIGURATION (Optional)
# ==============================================
# If using custom SMS service (e.g., Twilio, Hubtel SMS)
SMS_API_KEY=your_sms_api_key
SMS_API_SECRET=your_sms_api_secret
SMS_SENDER_ID=DoorKet

# ==============================================
# FILE STORAGE (Optional)
# ==============================================
# AWS S3 or similar for file uploads
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_S3_REGION=us-west-2

# ==============================================
# DATABASE (if using custom backend)
# ==============================================
DATABASE_URL=postgresql://username:password@localhost:5432/doorket
REDIS_URL=redis://localhost:6379

# ==============================================
# DEVELOPMENT TOOLS
# ==============================================
# Enable debug logging
EXPO_PUBLIC_DEBUG_MODE=true

# Enable development menu
EXPO_PUBLIC_DEV_MENU_ENABLED=true

# Flipper debugging (React Native)
FLIPPER_ENABLED=true

# ==============================================
# NOTES
# ==============================================
# 1. Replace all placeholder values with your actual credentials
# 2. Keep your .env file secure and never commit it to version control
# 3. Use different values for development, staging, and production
# 4. Some variables are prefixed with EXPO_PUBLIC_ to make them available in the client
# 5. Variables without EXPO_PUBLIC_ are server-side only (if using custom backend)
